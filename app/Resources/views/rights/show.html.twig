{% extends 'base.html.twig' %}

{% block body %}
    <h1>Right</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ right.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ right.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rights_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rights_edit', { 'id': right.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
