{% extends 'base.html.twig' %}

{% block body %}
    <h1>Userright</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ userright.id }}</td>
            </tr>
            <tr>
                <th>Datestart</th>
                <td>{% if userright.datestart %}{{ userright.datestart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
